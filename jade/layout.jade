mixin item(link,text)
    li
        a(href="#{link}") #{text}

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        block vars
        title=title
        //- link(rel="stylesheet",href="/css/bootstrap.min.css")
        link(rel="stylesheet",href="/css/base.css")
        script(src="/js/jquery.js")
        block style
    body
        .header
            .container
                a.brand(href="/")
                    img(src="/img/brand.png")
                ul.nav
                    +item("/light","轻彩宝")
                    +item("/heavy","高级彩宝")
                    +item("/brand","品牌故事")
                    +item("/","My Circle")


        div.content
            .panel
                block content
        .footer
            .container
                ul.nav
                    li
                        span @2014 circle
                    li
                        a(href="/html/light.html") 联系我们
                    li
                        a(href="/html/luxery.html") 隐私政策
                    li
                        a(href="/html/brand.html") 使用条款
                .social
                    span 与我们互动
                    img(src="/img/weixin.png")
                    img(src="/img/weibo.png")