.header,.footer
  z-index: 10
  min-width: 1260px
  max-width: 1400px

.content
  background-color: #2c2c2a
  background-image: url("/photos/list-bg.jpg")
  background-position: left top

.aside
  position: relative
  z-index: 5
  width: 370px
  .inner
    position: fixed 
    font-size: 12px
    .title
      color: #787878
    a
      color: #787878
    .active a
      color: #fff
  .ph // placeholder
    width: 100%
    padding: 150px 75px 0 75px

.info
  clearfix()
  position: relative
  width: 700px
  float: left
  .list
    clearfix()
    li
      width: 50%
      float: left
      a
        display: block
        padding: 2px
        img
          width: 100%