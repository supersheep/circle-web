.header
  z-index: 10

.content
  overflow: hidden
  background-color: #171717

.bg
  position: absolute
  width: 100%
  height: 100%
  top: 70px
  background-color: #e7e3d8
  opacity: 0.1
  left: 0

.aside
  position: relative
  z-index: 5
  width: 25%
  .inner 
    .title
      color: #787878
    a
      color: #787878
    .active a
      color: #fff


.info
  clearfix()
  position: relative
  z-index: 5
  width: 75%
  float: left
  .list
    li
      width: 50%
      float: left